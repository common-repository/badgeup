<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="src/BadgeUp/Client.php"
>
    <testsuites>
        <testsuite name="BadgeUp Test Suite">
        <directory>./tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
        <directory suffix=".php">./src/BadgeUp/</directory>
        </whitelist>
    </filter>
</phpunit>
